{
  "name": "shell",
  "author": "greg.almeidasilva@gmail.com",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "webpack --mode development && webpack-cli serve",
    "build": "webpack --mode production",
    "serve": "serve dist -p 3002",
    "build:dev": "webpack --mode development",
    "start:live": "webpack-dev-server --open --mode development --liveReload",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "npm run lint && npm run type-check && npm run test",
    "docker:up": "docker-compose up -d",
    "docker:build:dev": "docker-compose up -d --build",
    "docker:build": "docker build -t shell-image .",
    "docker:run": "docker run --name shell -d -p 3002:3002 shell-image"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm run lint",
      "npm run format"
    ]
  },
  "dependencies": {
    "@types/styled-components": "^5.1.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0",
    "styled-reset": "^4.3.4"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^25.2.3",
    "babel-loader": "^8.1.0",
    "bundle-loader": "^0.5.6",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2",
    "typescript": "^3.8.3",
    "webpack": "^5.1.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0"
  }
}
